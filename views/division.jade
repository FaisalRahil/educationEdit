                          td.text-center
                            p(data-placement="top", data-toggle="tooltip", title="تنسيب")
                              button#aY.btn.btn-success.btn-xs(data-title="Delete", data-toggle="modal",value="#{subY.id}", data-target="#addY")
                                span.glyphicon.glyphicon-plus
  #deleteS.modal.fade.font(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true")
            span.glyphicon.glyphicon-remove(aria-hidden="true")
          h4#Heading.modal-title.custom_align إلغاء تنسيب  مادة
        .modal-body
          .alert.alert-danger
            span.glyphicon.glyphicon-warning-sign
            |  هل انت متأكد من إلغاء تنسيب هذه المادة؟
        .modal-footer
          button#delS.btn.btn-success(type="button")
            span.glyphicon.glyphicon-ok-sign
            |  نعم
          button.btn.btn-default(type="button", data-dismiss="modal")
            span.glyphicon.glyphicon-remove
            |  لا
      // /.modal-content
    // /.modal-dialog
