extends layout
block authenticationStyle
block errorStyle
block content
  .container
    .row
      .col-md-10
        .btn-group.btn-breadcrumb
          a.btn.btn-default(href="/cPanel")
            i.glyphicon.glyphicon-home
          a.btn.btn-default(href="/division") عرض الشعب والتنسيب
          .btn.btn-default.active #{division.name}
        br
        br
        | تنسيب المواد لنظام   
        input#toggleForm(type='checkbox',data-on="سنة دراسية",data-off="فصل دراسي", data-toggle='toggle', data-offstyle="success")
        | 
        b لشعبة #{division.name}
        br
        br
        input#id_div(type="hidden",name="id_div",value="#{id_div}")
        .row
          #form1.animated
            .col-md-8
              .panel.panel-default
                .panel-heading
                  .row
                    .pull-right(style="margin-right: 10px;")
                      .panel-title المواد الفعلية
                .table-responsive
                  table.table.table-bordred.table-striped(border="0")
                    thead
                      th اسم المادة
                      th رمز المادة
                      th.text-center إلغاء التنسيب
                    tbody#semester
                      for sem in semester
                        tr(data-id ="#{sem.id}")
                          td #{sem.name}
                          td #{sem.code}
                          td.text-center
                            p(data-placement="top", data-toggle="tooltip", title="حذف")
                              button#dS.btn.btn-danger.btn-xs(data-title="Delete", data-toggle="modal",value="#{sem.id}", data-target="#deleteS")
                                span.glyphicon.glyphicon-minus
                    
            .col-md-4
              .panel.panel-default
                .panel-heading
                  .row
                    .pull-right(style="margin-right: 10px;")
                      .panel-title مواد القسم
                .table-responsive
                  table.table.table-bordred.table-striped(border="0")
                    thead
                      th اسم المادة
                      th رمز المادة
                      th.text-center تنسيب
                    tbody#subS
                      for subS in subjectsS
                        tr(data-id ="#{subS.id}")
                          td #{subS.name}
                          td #{subS.code}
                          td.text-center
                            p(data-placement="top", data-toggle="tooltip", title="تنسيب")
                              button#aS.btn.btn-success.btn-xs(data-title="add", data-toggle="modal",value="#{subS.id}", data-target="#addS")
                                span.glyphicon.glyphicon-plus


          #form2.animated
            .col-md-8
              .panel.panel-default
                .panel-heading
                  .row
                    .pull-right(style="margin-right: 10px;")
                      .panel-title المواد الفعلية
                .table-responsive
                  table.table.table-bordred.table-striped(border="0")
                    thead
                      th اسم المادة
                      th رمز المادة
                      th.text-center إلغاء التنسيب
                    tbody#year
                      for yer in year
                        tr(data-id ="#{yer.id}")
                          td #{yer.name}
                          td #{yer.code}
                          td.text-center
                            p(data-placement="top", data-toggle="tooltip", title="حذف")
                              button#dY.btn.btn-danger.btn-xs(data-title="Delete", data-toggle="modal",value="#{yer.id}", data-target="#deleteY")
                                span.glyphicon.glyphicon-minus
            .col-md-4
              .panel.panel-default
                .panel-heading
                  .row
                    .pull-right(style="margin-right: 10px;")
                      .panel-title مواد القسم
                .table-responsive
                  table.table.table-bordred.table-striped(border="0")
